@page
@model CiudadanosSanos.Pages.Patient.DeleteModel
@{
    ViewData["Title"] = "Eliminar Paciente";
}

<h1>Eliminar Paciente</h1>

<h3>¿Está seguro de que desea eliminar este paciente?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre Completo:</dt>
        <dd class="col-sm-10">@Model.Patient.NombreCompleto</dd>

        <dt class="col-sm-2">Cédula de Ciudadanía:</dt>
        <dd class="col-sm-10">@Model.Patient.CedulaCiudadania</dd>

        <dt class="col-sm-2">Edad:</dt>
        <dd class="col-sm-10">@Model.Patient.Edad</dd>

        <dt class="col-sm-2">Enfermedades:</dt>
        <dd class="col-sm-10">@Model.Patient.Enfermedades</dd>

        <dt class="col-sm-2">Alergias:</dt>
        <dd class="col-sm-10">@Model.Patient.Alergias</dd>

        <dt class="col-sm-2">Dirección:</dt>
        <dd class="col-sm-10">@Model.Patient.Direccion</dd>

        <dt class="col-sm-2">Número Telefónico:</dt>
        <dd class="col-sm-10">@Model.Patient.NumeroTelefonico</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Patient.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>
