@page
@model CiudadanosSanos.Pages.Patient.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].CedulaCiudadania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Enfermedades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Alergias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients[0].NumeroTelefonico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CedulaCiudadania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enfermedades)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alergias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroTelefonico)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
